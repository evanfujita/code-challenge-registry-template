<h1> Add to Participant to <%= @registry.name %> at <%= @registry.location %> </h1>

<%= form_for(@registry_participant) do |f| %>
    <%= f.label :participant_id %><br/>
    <%= f.collection_select :participant_id, Participant.all, :id, :name, prompt: true %><br/><br/>
    <%= f.label :coordinator_email %><br/>
    <%= f.collection_select :coordinator_email, Coordinator.all, :email, :email, prompt: true %><br/><br/>
    <%= f.label :remarks %><br/>
    <%= f.text_field :remarks %><br/><br/>
    <%= f.label :enrollment_date %><br/>
    <%= f.date_field :enrollment_date, value: DateTime.now.strftime('%Y-%m-%d') %><br/><br/>
    <%= f.hidden_field :registry_id, value: @registry.id %>    
    <%= f.submit value='Add Participant' %>
<% end %>
